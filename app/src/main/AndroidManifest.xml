<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.greengiant.canopy2">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="MainActivity"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ShadeListActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="ShadeActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="RoomListActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="RoomActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="CreateRoomActivity"
            android:configChanges="orientation"/>
        <activity android:name="CreateShadeActivity"
            android:configChanges="orientation"/>
        <activity android:name="UserSettingsActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="CreateScheduleActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="CreateShadeScheduleActivity"
            android:configChanges="orientation"/>
        <activity android:name="CreateRoomScheduleActivity"
            android:configChanges="orientation"/>
        <activity android:name="CreateHomeScheduleActivity"
            android:configChanges="orientation"/>
    </application>


</manifest>
