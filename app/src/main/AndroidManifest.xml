<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.greengiant.canopy2">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="MyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="OpeningActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name="LoginActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="NewUserActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="MainActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="ShadeListActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="ScheduleActivity"
            android:configChanges="orientation"/>
        <activity android:name="ShadeActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="RoomListActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="RoomActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="CreateRoomActivity"
            android:configChanges="orientation"/>
        <activity android:name="CreateShadeActivity"
            android:configChanges="orientation"/>
        <activity android:name="UserSettingsActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".CreateScheduleActivity"
            android:configChanges="orientation"/>
        <activity android:name="ConnectNestAccountActivity"
            android:configChanges="orientation"/>
        <activity android:name="ConnectShadeActivity"
            android:configChanges="orientation"/>
        <activity android:name="SunlightGraphActivity"
            android:configChanges="orientation"/>
        <activity android:name=".ScheduleGraphActivity"
            android:configChanges="orientation"/>
    </application>


</manifest>
